source /etc/network/interfaces.d/*

# The loopback network interface and sw-1 interface
auto lo eth0 eth1                    
iface lo inet loopback

# sw-1 interface
iface eth0 inet static          
        address 192.168.0.1
        netmask 255.255.255.0


# sw-2 interface
iface eth1 inet static          
        address 192.168.1.1
        netmask 255.255.255.0